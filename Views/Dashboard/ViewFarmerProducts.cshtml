@model List<AgriEnergyConnect.Models.Product>
@{
    ViewBag.Title = "Farmer's Product List";
    var farmerId = ViewBag.FarmerId;
    var farmerEmail = ViewBag.FarmerEmail;
}
<h2 class="mb-4">Products from: @farmerEmail</h2>

<div class="row mb-4">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header">Filter Products</div>
            <div class="card-body">
                <form method="get" class="row g-3">
                    <input type="hidden" name="farmerId" value="@farmerId" />

                    <div class="col-md-4">
                        <label for="category" class="form-label">Category</label>
                        <input type="text" name="category" id="category" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label for="startDate" class="form-label">Start Date</label>
                        <input type="date" name="startDate" id="startDate" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label for="endDate" class="form-label">End Date</label>
                        <input type="date" name="endDate" id="endDate" class="form-control" />
                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Apply Filter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Table Displaying Filtered Products -->
<h4>Filtered Product List</h4>
<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Production Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Category</td>
                    <td>@item.ProductionDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a href="/Dashboard/EmployeeDashboard" class="btn btn-secondary mt-3">Back to Employee Dashboard</a>
